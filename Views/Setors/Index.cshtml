<table class="table table-dark table-striped" style="position: relative;">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Local</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Setores)
        {
        <tr>
            <td>@p.Nome</td>
            <td>@p.Local</td>
            <td>
                <a asp-action="Edit" asp-route-id="@p.SetorId" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@p.SetorId" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@p.SetorId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
  
        }
        </tbody>
    </table>

@for (int i = Model.PrimeiraPagina; i <= Model.UltimaPagina; i++)
{

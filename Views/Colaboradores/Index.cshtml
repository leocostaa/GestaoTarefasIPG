@model ColaboradoresViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="position: relative;">Colaboradores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" style="position: relative;">Criar novo Colaborador</a>
</p>
<table class="table table-dark table-striped" style="position: relative;">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Profissao</th>
            <th scope="col">DataNascimento</th>
            <th scope="col">email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Colaboradores)
        {
            <tr>
                <td>@p.Nome</td>
                <td>@p.Profissao</td>
                <td>@p.DataNascimento</td>
                <td>@p.email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.ColaboradoresId" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@p.ColaboradoresId" class="btn btn-info">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@p.ColaboradoresId" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@for (int i = Model.PrimeiraPagina; i <= Model.UltimaPagina; i++)
{
    @if (i == Model.PaginaAtual)
    {
        <!--<a href="#">@i</a>-->
        <!--<a asp-action="Index" asp-route-page="@i" class="btn btn-outline-info">@i</a>-->
        <a href="#" class="btn btn-primary" style="position: relative">@i</a>
    }
    else
    {
        <a asp-action="Index" asp-route-page="@i" style="position: relative" class="btn btn-secondary">@i</a>
    }
}

@model IEnumerable<GestaoTarefasIPG.Models.Colaboradores>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="position: relative;">Colaboradores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" style="position: relative;">Criar novo Colaborador</a>
</p>
<table class="table" style="position: relative;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="font-size:20px; color:white">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profissao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ColaboradoresId" class="btn btn-dark">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ColaboradoresId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ColaboradoresId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

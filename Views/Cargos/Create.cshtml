@model GestaoTarefasIPG.Models.Cargos

@{
    ViewData["Title"] = "Create";
}

    <h1 style="position: relative; color:lightblue">Criar Cargos</h1>

<hr />
<div class="row" style="position: relative; color:white; font-size:30px"  >
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" style="width:200px" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Superior" class="control-label"></label>
                <input asp-for="Superior" class="form-control" style="width:200px" />
                <span asp-validation-for="Superior" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="position: relative;">
    <a asp-action="Index">Regressar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

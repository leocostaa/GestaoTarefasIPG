@model GestaoTarefasIPG.Models.Cargos

@{
    ViewData["Title"] = "Edit";
}
 <h1 style="position: relative; color:lightblue">Editar</h1>

<hr />
<div class="row" style="position: relative;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CargosId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" style="width:200px" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Superior" class="control-label"></label>
                <input asp-for="Superior" class="form-control" style="width:200px" />
                <span asp-validation-for="Superior" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="position: relative;">
    <a asp-action="Index" class="btn btn-warning">Regressar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
